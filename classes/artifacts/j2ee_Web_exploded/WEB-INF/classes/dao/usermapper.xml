<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserMapper">
    <select id="findUserByName" resultType="entity.User" parameterType="string">
        select * from user where user_name = #{name}
    </select>
    <insert id="save" parameterType="entity.User" >
	        insert into user(user_name,user_password,user_type)
	        values (#{name},#{password},#{user_type})    
	</insert>
	<select id="findAllUser" resultType="entity.User">
        SELECT *  FROM user
    </select>
    <insert id="adduser" parameterType="entity.User">
	        insert into user(user_name,user_password,user_type) values (#{user_name},#{user_password},#{user_type})  
    </insert>
    <delete id="deleteuserByname" parameterType="string" >
    delete from user where user_name=#{user_name}
    </delete>
    <update id="updateUser">
    update user set user_name=#{user_name},user_password=#{user_password},user_type=#{user_type} where user_id=#{user_id}
    
    </update>
</mapper>